{
    "version": 2,
    "builds": [{ "src": "index.ts", "use": "@now/node-server" }],
    "routes": [
      {
        "src": "/api/ip",
        "dest": "dist/index.js",
        "methods": ["GET"]
      },
      {
        "src": "/api/port/:port",
        "dest": "dist/index.js",
        "methods": ["GET"]
      },
      {
        "src": "/api/json/:jsonName",
        "dest": "dist/index.js",
        "methods": ["GET"]
      }
    ]
  }